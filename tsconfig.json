{
    "compilerOptions": {
        "sourceMap": true,
        "allowJs": true,
        "checkJs": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "outDir": "./dist",
        "rootDirs": [
            "./src",
            "./__tests__"
        ],
        "lib": [
            "ES2020"
        ],
        "module": "commonjs",
        "target": "es2020"
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.js",
        "__tests__/**/*.ts"
    ]
}